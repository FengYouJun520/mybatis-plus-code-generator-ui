{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "~wails/*": ["wailsjs/*"]
    }
  },
  "include": [
    "src/**/*.ts", "src/**/*.d.ts", 
    "src/**/*.tsx", "src/**/*.vue", 
    "wailsjs/**/*.ts", "wailsjs/**/*.d.ts", 
  ]
}
